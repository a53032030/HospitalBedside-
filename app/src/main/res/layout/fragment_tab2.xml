<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="330"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_bed_no"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bed_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="130dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="@color/color_title"
                android:textSize="90dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="610"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_white3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_operation_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="手术日期："
                android:textColor="@color/color_title"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@color/color_line"/>

            <TextView
                android:id="@+id/tv_bill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="费用类别："
                android:textColor="@color/color_title"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="27dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lv_protects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:dividerHeight="5dp"
                android:gravity="center"
                android:listSelector="#00000000"
                android:scrollbars="none"/>

            <ListView
                android:id="@+id/lv_catheters"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:dividerHeight="5dp"
                android:gravity="center"
                android:listSelector="#00000000"
                android:scrollbars="none"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
