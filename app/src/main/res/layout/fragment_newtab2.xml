<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1f1ff"
    android:orientation="vertical"
    android:paddingBottom="30px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:gravity="center">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="60px"
        android:layout_width="1220px"
        android:layout_height="wrap_content"
        >

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="260px"
            android:layout_height="170px"
            android:background="@color/bg_blue"
            >

            <ImageView
                android:layout_width="180px"
                android:layout_height="110px"
                android:layout_gravity="center"
                android:background="@mipmap/icon_bed1"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="260px"
                android:layout_height="170px"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_bed_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="103px"
                    android:textStyle="bold"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="330px"
            android:layout_height="170px"
            android:layout_marginLeft="10px"
            android:background="@color/bg_blue">

            <ImageView
                android:layout_width="180px"
                android:layout_height="110px"
                android:layout_gravity="center"
                android:background="@mipmap/icon_personal1"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="330px"
                android:layout_height="170px"

                android:gravity="center">

                <TextView
                    android:id="@+id/tv_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="77px"
                    android:textStyle="bold"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="600px"
            android:layout_height="170px"
            android:layout_marginLeft="20px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="20px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                >

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="220px"
                    android:layout_height="@dimen/pixel_60"
                    android:background="@drawable/ll_bg_blue"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手术日期"
                        android:textColor="@color/white"
                        android:textSize="@dimen/pixel_30"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pixel_60"
                    android:background="@drawable/ll_bg_gray"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="50px">

                    <TextView
                        android:id="@+id/tv_operation_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="27px"/>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginTop="10px"
                >

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="220px"
                    android:layout_height="@dimen/pixel_60"
                    android:background="@drawable/ll_bg_blue"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用类别"
                        android:textColor="@color/white"
                        android:textSize="@dimen/pixel_30"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pixel_60"
                    android:background="@drawable/ll_bg_gray"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="50px">

                    <TextView
                        android:id="@+id/tv_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="27px"/>

                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1220px"
        android:layout_height="398px"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="20px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="30px"
        android:background="@color/white"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="580px"
            android:layout_height="match_parent"
            android:layout_marginRight="10px"
            android:gravity="center"
            >

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview2"
            android:layout_width="580px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10px"
            >

        </android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
